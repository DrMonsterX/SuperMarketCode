    <script>
        layui.use(['form', 'table'], function () {
            var $ = layui.jquery;
            var form = layui.form;
            var table = layui.table;
            var layer = layui.layer;

            table.render({
                elem: '#shelf_info_table'
                , url: '/SHELves/getJson/' //数据接口
                , method: "post"
                , cellMinWidth: 120
                //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                //width 支持：数字、百分比和不填写。
                //你还可以通过 minWidth 参数局部定义当前单元格的最小宽度，layui 2.2.1 新增
                , cols: [[
                    { type: 'numbers' },
                    { field: 'SHELF_ID', sort: true, title: '货架编号' },
                    { field: 'SHELF_AREA', sort: true, title: '区域' },
                    { align: 'center', toolbar: '#staff-table-bar', title: '操作' }
                ]]

            });

            // 添加按钮点击事件
            $(document).on('click', '#shelf-btn-add', function (data) {
                layer.open({
                    type: 1,
                    title: '添加货架',
                    area: '400px',
                    offset: 'auto',
                    content: $('#shelf-add-model').html(),
                    success: function () {
                        form.val('shelf-add-form', data);
                    }
                });
            });
            // 工具条点击事件
            table.on('tool(shelf_info_table)', function (obj) {
                var data = obj.data;
                if (obj.event === 'edit') { //修改
                    layer.open({
                        type: 1,
                        title: '修改货架信息',
                        area: '400px',
                        offset: 'auto',
                        content: $('#shelf-model').html(),
                        success: function () {
                            form.val('shelf-modify-form', data);
                        }
                    });
                } else if (obj.event === 'del') { //删除
                    layer.confirm('确定要删除吗？', { title: '提示' }, function (index) {
                        obj.del();
                        //alert(data.VIP_ID);
                        $.post('/SHELves/Delete/' + data.SHELF_ID);
                        //向服务端发送删除指令
                        layer.close(index);

                    });
                }
            });

        });</script>
